<%- include('header') %>
    <form action="/changeProfile" method="post">
        <div class="card">
            <div class="card-body">
                <div class="card-title h4 mt-3">แก้ไขข้อมูล</div>
                <div class="mt-3">
                    <label for="name">ชื่อ</label>
                    <input name="name" type="text" class="form-control" value="<%= user.name %>"/>
                </div>
                <div class="mt-3">
                    <label for="usr">Username</label>
                    <input name="usr" type="text" class="form-control" value="<%= user.usr %>"/>
                </div>
                <div class="mt-3">
                    <label for="pwd">Password <span class="text-danger">*** หากไม่ป้อนจะยืดตามรหัสเดิม</span></label>
                    <input name="pwd" type="password" class="form-control"/>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-info">
                        Save
                    </button>
                </div>
            </div>
            <%if (session.message != undefined) { %>
                <div class="alert alert-success mt-3">
                    <%= session.message %>
                    <%= session.message = undefined %>
                </div>
            <% } %>
        </div>
    </form>
<%- include('footer') %>