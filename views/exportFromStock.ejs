<%- include('header') %>

    <div class="card mt-3">
        <div class="card-body">
            <div class="card-title">เบิกสินค้าออกจากสต็อก</div>
            <form method="post">
                <div class="mt-3">
                    <label>บาร์โค้ดสินค้า</label>
                    <input type="text" name="product_barcode" class="form-control"/>
                </div>
                <div class="mt-3">
                    <label>จํานวน</label>
                    <input type="text" name="qty" class="form-control" value="1"/>
                </div>
                <div class="mt-3">
                    <label>หมายเหตุ</label>
                    <input type="text" name="remark" class="form-control"/>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-info">
                        Save
                    </button>
                </div>
            </form>
            <table class="table mt-3 table-bordered table-striped">
                <thead>
                    <tr>
                        <th width="50px"></th>
                        <th>barcode</th>
                        <th>รายการสินค้า</th>
                        <th class="text-right">จํานวน</th>
                        <th>วันที่เบิกออกจากสต็อก</th>
                        <th>หมายเหตุ</th>
                    </tr>
                </thead>
                <tbody>
                    <% stockOuts.forEach(item => { %>
                    <tr>
                        <td class="text-center">
                            <a href="/deleteExportFromStock/<%= item.id %>" class="btn btn-danger" onclick="return confirm('ยืนยันการลบ')">
                                <span class="material-symbols-outlined material-icon">
                                    close
                                </span>
                            </a>
                        </td>
                        <td><%= item.barcode %></td>
                        <td><%= item.name %></td>
                        <td class="text-right"><%= item.qty %></td>
                        <td><%= dayjs(item.create_date).format(dayFormat) %></td>
                        <td><%= item.remark %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

<%- include('footer') %>