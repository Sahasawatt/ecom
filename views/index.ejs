<%- include('page_header') %>

<div class="container p-3 bg-light">
  <form>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">ป้อนคําค้นหา</div>
      </div>
      <input type="text" name="search" class="form-control"/>
      <div class="input-group-append">
          <button type="submit" class="btn btn-info">
            <span class="material-icons material-symbols-outlined material-icons">
                search
               </span>
            ค้นหา
          </button>
      </div>
    </div>
  </form>
  <div class="row mt-3">
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-12">
       <li class="list-group">
        <% groupProducts.forEach((item) => { %>
          <li class="list-group-item list-group-item-action list-group-item-info">
            <a class="btn" href="/?groupProductId=<%= item.id %>">
              <%= item.name %>
            </a>
          </li>
        <% }) %>
       </li>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-xs-12">
      <div class="row">
        <% product.forEach((product) => { %>
          <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="card mb-3 shadow bg-body rounded">
              <img src="images/<%= product.img %>" height="200px" class="card-img-top" alt=""/>
              <div class="card-body">
                <div class="text-center">
                  <div><%= product.name %></div>
                  <div><%= product.price %></div>
                </div>
                <div class="text-center">
                  <a href="/addToCard/<%= product.id %>" class="btn btn-info mt-2 text-sm">
                    <span class="material-icons material-symbols-outlined material-icons">
                      shopping_cart
                    </span>
                    Add
                  </a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>
</div>
<%- include('page_footer') %>
