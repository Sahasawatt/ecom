<%- include('header') %>
<div class="card mt-3">
    <div class="card-body">
        <div class="card-title">รับสินค้าเข้าสต็อก</div>
        <form method="post">
            <div>
                <label>สินค้า</label>
                <input type="text" class="form-control" name="product_barcode">
            </div>
            <div class="mt-3">
                <label>จํานวน</label>
                <input type="text" class="form-control" name="qty" value="1">
            </div>
            <div class="mt-3">
                <label>หมายเหตุ</label>
                <input type="text" class="form-control" name="remark">
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-info">
                    Save
                </button>
            </div>
        </form>
        <table class="table mt-3 table-bordered table-striped">
            <thead>
                <tr>
                    <th width="50px"></th>
                    <th>barcode</th>
                    <th>รายการสินค้า</th>
                    <th class="text-right">จํานวน</th>
                    <th>วันที่รับเข้าสต็อก</th>
                    <th>หมายเหตุ</th>
                </tr>
            </thead>
            <tbody>
                <% stockIns.forEach(item => { %>
                <tr>
                    <td class="text-center">
                        <a href="/deleteImportToStock/<%= item.id %>" class="btn btn-danger" onclick="return confirm('ยืนยันการลบ')">
                            <span class="material-symbols-outlined material-icon">
                                close
                            </span>
                        </a>
                    </td>
                    <td><%= item.barcode %></td>
                    <td><%= item.name %></td>
                    <td class="text-right"><%= item.qty %></td>
                    <td><%= dayjs(item.create_date).format(dayFormat) %></td>
                    <td><%= item.remark %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include('footer') %>