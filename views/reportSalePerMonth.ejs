<%- include('header') %>

<div class="card">
    <div class="card-body">
        <div class="card-title">รายงานยอดขาย รายเดือน</div>
        <div class="mt-3">
            <form method="get">
                <div class="row">
                  <div class="col-2">
                    <div class="input-group">
                      <div class="input-group-prepend">
                          <div class="input-group-text">ปี</div>
                        </div>
                      <select class="form-control" name="year">
                          <% arrYears.forEach(item => { %>
                              <option value="<%= item %>" <% if (item == y) {%> selected  <% } %> ><%= item %></option>
                          <% }) %>
                      </select>
                    </div>
                  </div>
                  <div class="col-2">
                    <button type="submit" class="btn btn-primary">แสดงข้อมูล</button>
                  </div>
                </div>
              </form>
            <table class="mt-3 table table-bordered table-striped">
                <thead>
                    <tr>
                        <th width="100px">เดือนที่</th>
                        <th class="text-right">ยอดขาย</th>
                    </tr>
                </thead>
                <tbody>
                    <% arr.forEach((item , index) => { %>
                        <tr>
                            <td><%= index +1 %></td>
                            <td class="text-right"><%= item %></td>
                        </tr>
                    <% })  %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('footer') %>